<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<h2>New game</h2>

<!-- GENERATE GRID -->

<p>Please consider those 10 letters:</p>

<% @letters.each do |letter| %>
  <%= p letter %>
<% end %>

<!-- FORM -->
<p>What is the longest word you can find (UPPERCASE)?</p>
<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Your word here!">
  <input type="submit" value="Play!">
<!-- HIDDEN INPUT TO KEEP GRID VALUE -->
  <%= hidden_field_tag :grid, @letters %>
</form>

<p></p>

<%= link_to "New set of letters", new_path  %>